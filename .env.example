# Configuration de l'environnement pour Lugayetu
# Copiez ce fichier en .env et remplissez les valeurs appropriées

# Base de données PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database

# Clé secrète pour les sessions Flask et JWT
# Générez une clé aléatoire sécurisée pour la production
SESSION_SECRET=your-secret-key-here

# Configuration PostgreSQL (facultatif si DATABASE_URL est défini)
PGHOST=localhost
PGPORT=5432
PGUSER=your-username
PGPASSWORD=your-password
PGDATABASE=lugayetu_db

# Dossier de téléchargement des fichiers audio
UPLOAD_FOLDER=uploads/audio

# Taille maximale des fichiers (en octets, par défaut 50MB)
MAX_CONTENT_LENGTH=52428800
